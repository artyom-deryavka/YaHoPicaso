<div class="block">
  <div class="content">          
    <br>
  	<div class="inner">
  		<span class="h9" class="title"><%= image_tag ("#{request.ssl? ? "https://secure" : "http://www"}.gravatar.com/avatar/#{Digest::MD5.hexdigest user.email}?s=40"), :alt => "Avatar" %> <%= link_to ("#{user.email}#{", #{user.name}" if user.name}"), user_path(user) %></span>

	<div class="hr"></div>
			<% for photo in user.attaches %>
                <div class="photo_thumb">
					<%= link_to image_tag(photo.photo.url(:thumb)), photo.photo.url(:original) %>
                 </div>
			<% end %>
</div>
</div>

</div>

